{
  "name": "retro-arcade",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "test": "vitest run",
    "test:e2e": "sh -c 'vite --host 127.0.0.1 --port 4173 >/tmp/retro-arcade-e2e.log 2>&1 & SERVER_PID=$!; trap \"kill $SERVER_PID\" EXIT; sleep 2; playwright test \"$@\"' --",
    "lint": "eslint .",
    "audio:lyria": "node scripts/generate-lyria-assets.mjs",
    "sim:quick": "node scripts/simulate-score-balance.mjs --runs 8 --profile balanced",
    "sim:batch": "node scripts/simulate-score-balance.mjs --runs 20 --profiles balanced,snake-specialist,pac-specialist,amp-specialist,casual"
  },
  "dependencies": {
    "@google/genai": "^1.41.0",
    "pg": "^8.18.0",
    "pixi.js": "^8.6.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.7.5",
    "@types/pg": "^8.16.0",
    "eslint": "^9.12.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "sharp": "^0.34.5",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.2"
  }
}
